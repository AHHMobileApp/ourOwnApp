<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping 
 PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping> 

    <class name="records.Record" table="RECORD"> 
        <id name="recordID" column="recordID"> 
			<generator class="increment"/>
        </id> 
        <property name="productID" column="productID"/>
        <property name="date" column="recordDate"/>
        <property name="retailPrice" column="retailPrice"/>
        <property name="billID" column="billID"/>
    </class> 
</hibernate-mapping>