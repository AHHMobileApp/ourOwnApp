<?xml version="1.0" encoding="utf-8"?> 
<!DOCTYPE hibernate-mapping 
 PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping> 

    <class name="items.Item" table="ITEM"> 
        <id name="productID" column="productID"> 

        </id> 
        <property name="productName" column="productName"/> 
        <property name="catagory" column="Catagory"/> 
        <property name="suggestedRetailPrice" column="suggestedRetailPrice"/> 
        <property name="cost" column="cost"/> 
        <property name="des" column="des"/> 
        <property name="stock" column="stock"/> 
    </class> 

</hibernate-mapping>